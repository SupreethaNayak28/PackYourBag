<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- CONTACT US Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTACT US"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="@color/teal_700"
            android:textAlignment="center"
            android:layout_marginTop="16dp"/>

        <!-- About Us Content Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to Pack Your Bag! We're here to ensure you have everything you need for your travels. From essentials to must-haves, we've got your packing covered. Enjoy stress-free journeys with our simple and intuitive app."
            android:textSize="22sp"
            android:textColor="@color/black"
            android:padding="16dp"
            android:background="#73be73"
            android:textStyle="italic"/>

        <!-- Image 1 and Text with Animation -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#73be73">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/van"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
               />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image1"
                android:text="Vandana Prabhu"
                android:textSize="19sp"
                android:background="#949494"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:textStyle="italic"/>

        </RelativeLayout>

        <!-- Image 2 and Text with Animation -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#73be73">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/sup"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/image2"
                android:text="Supreetha Nayak"
                android:textSize="19sp"
                android:background="#949494"
                android:textColor="@android:color/black"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                android:textStyle="italic"/>

        </RelativeLayout>
        <!-- FOR ENQUIRY Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FOR ENQUIRY:"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="@color/teal_700"
            android:textAlignment="center"
            android:layout_marginTop="16dp"/>

        <!-- Email Section -->
        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="madvs182@gmail.com"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:padding="16dp"
            android:textAlignment="center"
            android:background="#73be73"/>

    </LinearLayout>

</ScrollView>
